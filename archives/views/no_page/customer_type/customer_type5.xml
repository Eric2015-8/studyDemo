<openerp>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="archives_common_customer_type5_list">
            <field name="name">客户分类5列表</field>
            <field name="model">archives.customer_type5</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="archives_common_customer_type5_edit">
            <field name="name">客户分类5新建</field>
            <field name="model">archives.customer_type5</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_top" string="客户分类5">
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="archives_common_customer_type5_action_window">
            <field name="name">客户分类5</field>
            <field name="res_model">archives.customer_type5</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
