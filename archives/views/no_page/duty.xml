<openerp>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="archives_common_duty_list">
            <field name="name">职务列表</field>
            <field name="model">archives.duty</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="archives_common_duty_edit">
            <field name="name">职务新建</field>
            <field name="model">archives.duty</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_top" string="职务">
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="archives_common_duty_action_window">
            <field name="name">职务</field>
            <field name="res_model">archives.duty</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</openerp>