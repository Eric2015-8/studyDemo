<openerp>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="archives_common_customer_list">
            <field name="name">客户列表</field>
            <field name="model">archives.customer</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="short_name"/>
                    <field name="company_id"/>
                    <field name="customer_type_id"/>
                    <field name="staff_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="archives_common_customer_edit">
            <field name="name">客户新建</field>
            <field name="model">archives.customer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_top" string="客户">
                            <field name="name"/>
                            <field name="short_name" placeholder="用于报表显示"/>
                        </group>
                        <notebook>
                            <page string="通用信息">
                                <group col="4">
                                    <field name="tel"/>
                                    <field name="staff_id" domain="[('is_sale_man','=',True)]" options="{'no_open':True,'no_create':True}"/>
                                    <label for="address" string="客户地址"/>
                                    <div class="o_address_format">
                                        <field name="address"/>
                                        <field name="zone_id" class="oe_inline" placeholder="地区"/>
                                        <field name="zone_type1_id" class="oe_inline" placeholder="地区分类1"/>
                                        <field name="zone_type2_id" class="oe_inline" placeholder="地区分类2"/>
                                    </div>
                                    <field name="company_id" options="{'no_open':True,'no_create':True}"/>
                                </group>
                            </page>
                            <page string="地址&amp;联系人">
                            </page>
                            <page string="客户分类">
                                <group col="2">
                                    <field name="customer_type_id" placeholder="主分类,用于单据列表、报表"
                                           domain="[('archive_name','=',2)]"
                                           options="{'no_open':True,'no_create':True}"/>
                                </group>
                                <group col="4">
                                    <field name="customer_type1_id" domain="[('archive_name','=',3)]" options="{'no_open':True,'no_create':True}"/>
                                    <field name="customer_type2_id" domain="[('archive_name','=',4)]" options="{'no_open':True,'no_create':True}"/>
                                    <field name="customer_type3_id" domain="[('archive_name','=',5)]" options="{'no_open':True,'no_create':True}"/>
                                    <field name="customer_type4_id" domain="[('archive_name','=',6)]" options="{'no_open':True,'no_create':True}"/>
                                    <field name="customer_type5_id" domain="[('archive_name','=',7)]" options="{'no_open':True,'no_create':True}"/>
                                    <field name="customer_type6_id" domain="[('archive_name','=',8)]" options="{'no_open':True,'no_create':True}"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="archives_common_customer_action_window">
            <field name="name">客户</field>
            <field name="res_model">archives.customer</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- server action to the one above -->
