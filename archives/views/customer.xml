    <record model="ir.actions.server" id="archives.action_server">
      <field name="name">archives server</field>
      <field name="model_id" ref="model_archives_archives"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

        <menuitem name="销售" id="archives.menu_sale" parent="archives_menu_root"/>

        <!-- actions -->
        <menuitem name="客户" id="archives.menu_sale_customer" parent="archives.menu_sale"
                  action="archives_common_customer_action_window"/>
    </data>
</openerp>