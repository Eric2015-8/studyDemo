<openerp>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="archives_common_company_list">
            <field name="name">公司列表</field>
            <field name="model">archives.company</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="short_name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="archives_common_company_edit">
            <field name="name">公司新建</field>
            <field name="model">archives.company</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_top" string="公司">
                            <field name="name" placeholder="您所在的公司的全称"/>
                            <field name="short_name" placeholder="用于报表显示"/>
                            <!--<field name="spell"/>-->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="archives_common_company_action_window">
            <field name="name">公司</field>
            <field name="res_model">archives.company</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- server action to the one above -->
        <!--
        <record model="ir.actions.server" id="archives.action_server">
          <field name="name">archives server</field>
          <field name="model_id" ref="model_archives_archives"/>
          <field name="code">
            action = {
              "type": "ir.actions.act_window",
              "view_mode": "tree,form",
              "res_model": self._name,
            }
          </field>
        </record>
        -->

        <!-- actions -->
        <menuitem name="公司" id="archives.menu_company" parent="archives_menu_common"
                  action="archives_common_company_action_window"/>
    </data>
</openerp>