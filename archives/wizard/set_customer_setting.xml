<openerp>
    <data>
        <record model="ir.ui.view" id="archives_set_customer_setting_wizard">
            <field name="name">个性设置</field>
            <field name="model">archives.set_customer_setting</field>
            <field name="arch" type="xml">
                <form>
                    <group colspan="4">
                        <field name="user_id" options="{'no_open':True,'no_create':True}"/>
                        <field name="table_show_name"/>
                        <field name="table" attrs="{'invisible':True}"/>
                    </group>
                    <group colspan="4">
                        <field name="is_show_customer_id" attrs="{'invisible':True}"/>
                        <field name="is_show_type_id" attrs="{'invisible':True}"/>
                        <field name="is_show_company_id" attrs="{'invisible':True}"/>
                        <field name="is_show_staff_id" attrs="{'invisible':True}"/>
                        <field name="is_show_store_id" attrs="{'invisible':True}"/>
                        <field name="is_show_department_id" attrs="{'invisible':True}"/>
                        <field name="is_show_in_store_type_id" attrs="{'invisible':True}"/>
                        <field name="is_show_sale_return_type_id" attrs="{'invisible':True}"/>
                        <field name="customer_id" options="{'no_open':True,'no_create':True}"
                               attrs="{'invisible':[('is_show_customer_id','!=',True)]}"/>
                        <field name="type_id" options="{'no_open':True,'no_create':True}"
                               attrs="{'invisible':[('is_show_type_id','!=',True)]}"/>
                        <field name="company_id" options="{'no_open':True,'no_create':True}"
                               attrs="{'invisible':[('is_show_company_id','!=',True)]}"/>
                        <field name="staff_id" options="{'no_open':True,'no_create':True}"
                               attrs="{'invisible':[('is_show_staff_id','!=',True)]}"/>
                        <field name="store_id" options="{'no_open':True,'no_create':True}"
                               attrs="{'invisible':[('is_show_store_id','!=',True)]}"/>
                        <field name="department_id" options="{'no_open':True,'no_create':True}"
                               attrs="{'invisible':[('is_show_department_id','!=',True)]}"/>
                        <field name="in_store_type_id" options="{'no_open':True,'no_create':True}"
                               attrs="{'invisible':[('is_show_in_store_type_id','!=',True)]}"/>
                        <field name="sale_return_type_id" options="{'no_open':True,'no_create':True}"
                               attrs="{'invisible':[('is_show_sale_return_type_id','!=',True)]}"/>
                    </group>
                    <footer>
                        <button name="subscribe" type="object"
                                string="保存" class="oe_highlight"/>
                        or
                        <button special="取消" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>