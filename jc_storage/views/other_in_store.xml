<openerp>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="jc_storage_other_in_store_list">
            <field name="name">其他入库列表</field>
            <field name="model">jc_storage.other_in_store</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="bill_state"/>
                    <field name="store_id"/>
                    <field name="in_store_type_id"/>
                    <field name="staff_id"/>
                    <field name="date"/>
                    <field name="customer_id"/>
                    <field name="company_id"/>
                    <field name="department_id"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="jc_storage_other_in_store_edit">
            <field name="name">其他入库新建</field>
            <field name="model">jc_storage.other_in_store</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="id" attrs="{'invisible': True}"/>
                        <label string="单据状态:"/>
                        <field name="bill_state" readonly="1" attrs="{'invisible': [('id', '==', False)]}"/>
                        <button name="do_check" string="审核" type="object" class="oe_highlight oe_read_only"
                                attrs="{'invisible': ['|',('bill_state', '!=', 1),('id', '==', False)]}"
                                groups="jc_storage.jc_group_storage_all"/>
                        <button name="do_un_check" string="撤销" type="object"
                                class="oe_highlight oe_read_only" attrs="{'invisible': [('bill_state', '!=', 10)]}"
                                groups="jc_storage.jc_group_storage_all"/>
                        <button name="do_finish" string="完毕" type="object"
                                class="oe_highlight oe_read_only" attrs="{'invisible': [('bill_state', '!=', 10)]}"
                                groups="jc_storage.jc_group_storage_all"/>
                        <button name="do_un_finish" string="撤销完毕" type="object"
                                class="oe_highlight oe_read_only" attrs="{'invisible': [('bill_state', '!=', 20)]}"
                                groups="jc_storage.jc_group_storage_all"/>
                        <button name="do_customer_setting" string="个性设置" type="object"
                                attrs="{'invisible': [('bill_state', '!=', 1)]}"/>
                    </header>
                    <sheet>
                        <group name="group_top" string="其他入库" col="4">
                            <field name="store_id" options="{'no_open':True,'no_create':True}"/>
                            <field name="in_store_type_id" options="{'no_open':True,'no_create':True}"/>
                            <field name="date"/>
                            <field name="remark" col="4"/>
                        </group>
                        <notebook>
                            <page string="物料信息">
                                <div>
                                    <button name="add_goods_page" string="添加" type="object"
                                            class="oe_highlight oe_edit_only"/>
                                </div>
                                <field name="other_in_store_detail" mode="tree,kanban">
                                    <tree string="其他入库明细" editable="bottom">
                                        <!--<field name="store_id"/>-->
                                        <!--<field name="active_goods_position" invisible="1"/>-->
                                        <field name="goods_id" options="{'no_open':True,'no_create':True}"/>
                                        <field name="second_unit_id" readonly="1"/>
                                        <field name="second_unit_number" widget="char"/>
                                        <field name="main_unit_id" readonly="1"/>
                                        <field name="main_unit_number" widget="char"/>
                                        <field name="price" widget="char"/>
                                        <field name="money"/>
                                        <!--<field name="goods_position_id" options="{'no_open':True,'no_create':True}"-->
                                        <!--attrs="{'readonly': [ ('active_goods_position', '=', False)]}"/>-->
                                        <!--<field name="goods_batch_id"/>-->
                                        <field name="remark"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="其它信息">
                                <group name="group_other" col="4">
                                    <field name="customer_id" options="{'no_open':True,'no_create':True}"/>
                                    <field name="staff_id" domain="[('is_sale_man','=',True)]"
                                           options="{'no_open':True,'no_create':True}" readonly="0"/>
                                    <field name="company_id" options="{'no_open':True,'no_create':True}"/>
                                    <field name="department_id" options="{'no_open':True,'no_create':True}"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="other_in_store_search_view">
            <field name="name">other_in_store.search</field>
            <field name="model">jc_storage.other_in_store</field>
            <field name="arch" type="xml">
                <search>
                    <field name="bill_state"/>
                    <field name="store_id"/>
                    <field name="in_store_type_id"/>
                    <field name="staff_id"/>
                    <filter name="not_checked_bill" string="未审核"
                            domain="[('bill_state', '=', 1)]"/>
                    <group string="Group By">
                        <filter name="by_bill_state" string="单据状态"
                                context="{'group_by': 'bill_state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="jc_storage_other_in_store_action_window">
            <field name="name">其他入库</field>
            <field name="res_model">jc_storage.other_in_store</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{'search_default_not_checked_bill': 1}"/>
        </record>

        <menuitem name="其他入库" id="jc_storage.menu_other_in_store" parent="jc_storage_menu_root"
                  action="jc_storage_other_in_store_action_window" sequence="1"/>

    </data>
</openerp>