<openerp>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="archives_common_sale_forecast_list">
            <field name="name">销售预报列表</field>
            <field name="model">jc_sale.sale_forecast</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id"/>
                    <field name="bill_state"/>
                    <field name="customer_id"/>
                    <field name="date"/>
                    <field name="saleType_id"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="archives_common_sale_forecast_edit">
            <field name="name">销售预报新建</field>
            <field name="model">jc_sale.sale_forecast</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="id" attrs="{'invisible': True}"/>
                        <field name="bill_state" readonly="1" attrs="{'invisible': [('id', '==', False)]}"/>
                        <button name="do_check" string="审核" type="object" class="oe_highlight"
                                attrs="{'invisible': ['|',('bill_state', '!=', 1),('id', '==', False)]}"/>
                        <button name="do_un_check" string="撤销" type="object"
                                class="oe_highlight" attrs="{'invisible': [('bill_state', '!=', 10)]}"/>
                        <button name="do_finish" string="完毕" type="object"
                                class="oe_highlight" attrs="{'invisible': [('bill_state', '!=', 10)]}"/>
                        <button name="do_un_finish" string="撤销完毕" type="object"
                                class="oe_highlight" attrs="{'invisible': [('bill_state', '!=', 20)]}"/>
                    </header>
                    <sheet>
                        <group name="group_top" string="销售预报" col="4">
                            <field name="customer_id"/>
                            <field name="date"/>
                            <field name="saleType_id"/>
                            <field name="remark"/>
                        </group>
                        <notebook>
                            <page string="物料信息">
                                <field name="sale_forecast_detail" mode="tree,kanban">
                                    <tree string="销售预报明细" editable="bottom">
                                        <field name="goods_id"/>
                                        <field name="secondUnit_id" readonly="1"/>
                                        <field name="secondUnitNumber"/>
                                        <field name="mainUnit_id" readonly="1"/>
                                        <field name="mainUnitNumber"/>
                                        <field name="price"/>
                                        <field name="money" readonly="1"/>
                                        <field name="remark"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="其它信息">
                                <group name="group_other" col="4">
                                    <field name="company_id"/>
                                    <field name="staff_id" domain="[('isSaleMan','=',True)]"/>
                                    <field name="store_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="archives_common_sale_forecast_action_window">
            <field name="name">销售预报</field>
            <field name="res_model">jc_sale.sale_forecast</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="销售预报" id="jc_sale.menu_sale_forecast" parent="jc_sale_menu_root"
                  action="archives_common_sale_forecast_action_window"/>

    </data>
</openerp>