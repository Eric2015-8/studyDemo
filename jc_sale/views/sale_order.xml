<openerp>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="archives_common_sale_order_list">
            <field name="name">销售订单列表</field>
            <field name="model">jc_sale.sale_order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="customer_id"/>
                    <field name="date"/>
                    <field name="saleType_id"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="archives_common_sale_order_edit">
            <field name="name">销售订单新建</field>
            <field name="model">jc_sale.sale_order</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_top" string="销售订单" col="4">
                            <field name="customer_id"/>
                            <field name="date"/>
                            <field name="saleType_id"/>
                            <field name="remark"/>
                        </group>
                        <notebook>
                            <page string="物料信息">
                                <field name="sale_order_detail" mode="tree,kanban">
                                    <tree string="销售订单明细" editable="bottom">
                                        <field name="goods_id"/>
                                        <field name="secondUnit_id" readonly="1"/>
                                        <field name="secondUnitNumber"/>
                                        <field name="mainUnit_id" readonly="1"/>
                                        <field name="mainUnitNumber"/>
                                        <field name="price"/>
                                        <field name="money" readonly="1"/>
                                        <!--<field name="sale_forecast_id" readonly="1"/>-->
                                        <!--<field name="sale_forecast_detail_id" readonly="1" invisible="1"/>-->
                                        <field name="remark"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="其它信息">
                                <group name="group_other" col="4">
                                    <field name="company_id"/>
                                    <field name="staff_id" domain="[('isSaleMan','=',True)]"/>
                                    <field name="store_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="archives_common_sale_order_action_window">
            <field name="name">销售订单</field>
            <field name="res_model">jc_sale.sale_order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="销售订单" id="jc_sale.menu_sale_order" parent="jc_sale_menu_root"
                  action="archives_common_sale_order_action_window"/>

    </data>
</openerp>